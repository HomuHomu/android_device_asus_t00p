# for CMHardwareService access to TapToWake
allow system_server proc_touchpanel:file rw_file_perms;
allow system_server proc_touchpanel:dir { search };
allow system_server time_daemon:unix_stream_socket connectto;

# for CMHardwareService access to VibratorHW
allow system_server vibeamp_sysfs:file rw_file_perms;

# display tuning
allow system_server display_sysfs:file rw_file_perms;

allow system_server unlabeled:file { rename write setattr };
allow system_server unlabeled:dir { setattr open read getattr write remove_name add_name};
allow system_server default_prop:property_service set;
allow system_server rtc_device:chr_file { open read write };

